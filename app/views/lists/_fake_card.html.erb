  <div class="col md-4 mb-3 mt3">
    <div class="card category-compras position-relative">
      <div class="card-header">
        <h5><%= "Churras da Firma" %></h5>
        <div class="status-icon">
          <% if 1 == 1 %>
            <i class="fas fa-check-circle text-success"></i>
          <% else %>
            <i class="fas fa-times-circle text-danger"></i>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div id="items">
          <div class="item">
            <input type="checkbox" class="item-checkbox" <%= 'checked' if 1 == 1 %>>
            <span class="item-description <%= 'checked' if 1 == 1 %>"><%= "Picanha" %></span>
          </div>
          <div class="item">
            <input type="checkbox" class="item-checkbox" <%= 'checked' if 1 == 1 %>>
            <span class="item-description <%= 'checked' if 1 == 1 %>"><%= "Cupim" %></span>
          </div>
          <div id="items">
            <div class="item">
              <input type="checkbox" class="item-checkbox" <%= 'checked' if 1 == 1 %>>
              <span class="item-description <%= 'checked' if 1 == 1 %>"><%= "Sal grosso" %></span>
            </div>
            <div class="item">
              <input type="checkbox" class="item-checkbox" <%= 'checked' if 1 == 1 %>>
              <span class="item-description <%= 'checked' if 1 == 1 %>"><%= "Coquinha" %></span>
            </div>
            <div id="items">
              <div class="item">
                <input type="checkbox" class="item-checkbox" <%= 'checked' if 1 == 1 %>>
                <span class="item-description <%= 'checked' if 1 == 1 %>"><%= "Uma grade de Heineken" %></span>
              </div>
              <div class="item">
                <input type="checkbox" class="item-checkbox" <%= 'checked' if 1 == 1 %>>
                <span class="item-description <%= 'checked' if 1 == 1 %>"><%= "Gelo" %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mt-2">
            <button class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#authModal">Editar</button>
          </div>
          <div class="col mt-2">
            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#authModal">Apagar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="authModalLabel">Inicia sessão</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex">
        <div id="authModalContent" class="d-flex transition-container">
          <div id="loginForm" class="auth-form">
            <h4>Login</h4>
            <form action="<%= login_path %>" method="post">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
              <p class="mt-3">
                Não possui uma conta? <%= link_to "cadastre-se", :signup %>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>